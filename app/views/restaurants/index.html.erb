<h1>Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= restaurant.name %> |
      <%= restaurant.address %> |
      <%= link_to 'Edit', edit_restaurant_path(restaurant) %> |
      <%= link_to "Delete", restaurant_path(restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "Create Restaurant", new_restaurant_path %>
